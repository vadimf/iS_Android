<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltvLayoutPost">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imgViewPost"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgViewPost"
            android:layout_alignBottom="@id/imgViewPost"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgViewUser"
                android:layout_alignParentStart="true"
                android:src="@drawable/small_image_profile_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewUsername"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/imgViewUser"
                style="@style/TitleMediumLightStyle"
                android:textColor="@color/white"
                android:layout_alignTop="@id/imgViewUser"
                android:layout_alignBottom="@id/imgViewUser"
                tools:text="alex"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:id="@+id/txtViewDescription"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgViewViews"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                android:tint="@color/white"
                android:layout_above="@id/txtViewDescription"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewViews"
                android:layout_toEndOf="@id/imgViewViews"
                android:layout_alignTop="@id/imgViewViews"
                android:layout_alignBottom="@id/imgViewViews"
                android:layout_above="@id/txtViewDescription"
                tools:text="345"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgViewAction"
                android:src="@drawable/ic_more_info"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:id="@+id/cardViewReply"
        android:background="@drawable/app_background">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/videoViewPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:resize_mode="fixed_height"
                app:surface_type="texture_view"
                app:use_controller="true"
                app:show_timeout="3000"
                app:controller_layout_id="@layout/reply_playback_control"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgViewPreview"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawable_alpha_player_bottom">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imgViewPhoto"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_xs_no_photo_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewUsername"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgViewPhoto"
                style="@style/LabelTextBoldStyle"
                tools:text="alex"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewDate"
                style="@style/LabelTextGreyLightRegularStyle"
                android:layout_alignStart="@id/txtViewUsername"
                android:layout_below="@id/txtViewUsername"
                tools:text="3 days ago"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmLayoutMenu"
                android:layout_alignParentEnd="true"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_touch_bar"
                    android:tint="@color/white"/>
            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/separator"
                app:np_max="31"
                app:np_min="1"
                app:np_selectedTextColor="@color/grey_light"
                app:np_textColor="@color/separator"
                app:np_textSize="16sp"
                app:np_selectedTextSize="16sp"
                app:np_value="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/separator"
                app:np_max="7"
                app:np_min="0"
                app:np_selectedTextColor="@color/grey_light"
                app:np_textColor="@color/separator"
                app:np_textSize="16sp"
                app:np_selectedTextSize="16sp"
                app:np_value="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/pickerYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/separator"
                app:np_min="1900"
                app:np_selectedTextColor="@color/grey_light"
                app:np_textColor="@color/separator"
                app:np_textSize="16sp"
                app:np_selectedTextSize="16sp"
                app:np_value="2018" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>
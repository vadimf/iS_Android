<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnrLayoutVideoInformation"
        android:orientation="vertical"
        android:background="@color/background_opacity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgViewPhoto"
                android:layout_alignParentStart="true"
                android:src="@drawable/small_image_profile_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewUsername"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgViewPhoto"
                style="@style/TitleMediumLightStyle"
                android:textColor="@color/white"
                tools:text="alex"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewDate"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/assistant_light"
                android:layout_alignStart="@id/txtViewUsername"
                android:layout_below="@id/txtViewUsername"
                tools:text="3 days ago"/>
            <Button
                style="@style/ButtonFollowSmall"
                android:id="@+id/btnAction"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/btn_follow"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewTitle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            tools:text="Test"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewHashTags"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"/>
    </LinearLayout>
</layout>
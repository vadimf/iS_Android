<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_margin_top"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_how_to_create_account"
                style="@style/LabelTextMediumStyle"/>

            <include layout="@layout/layout_edit_text"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/sign_margin_top"
                     android:layout_marginStart="20dp"
                     android:layout_marginEnd="20dp"
                     android:id="@+id/inputEmail"/>
            <include layout="@layout/layout_edit_text"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/sign_margin_top"
                     android:layout_marginStart="20dp"
                     android:layout_marginEnd="20dp"
                     android:id="@+id/inputPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_by_facebook"
                style="@style/LabelTextMediumStyle"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btnFacebook"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center_horizontal"
                app:com_facebook_login_text="with your Facebook"
                android:layout_marginTop="@dimen/sign_margin_top"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:id="@+id/txtViewAgreement"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                style="@style/LabelTextStyle"
                android:text="@string/label_sign_up_agreement"/>

            <Button
                android:id="@+id/btnSignUp"
                android:enabled="false"
                android:layout_marginTop="@dimen/sign_margin_top"
                style="@style/ButtonRegularStyle"
                android:textColor="@color/grey_dark"
                android:layout_marginBottom="10dp"
                android:text="@string/btn_sign_up"/>
        </LinearLayout>
    </ScrollView>
</layout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_positive_color">@color/red_special_2</item>
        <item name="md_negative_color">@color/red_special_2</item>
        <item name="md_content_color">@color/grey</item>
        <item name="md_title_color">@color/grey</item>
        <item name="md_widget_color">@color/grey</item>
        <item name="md_background_color">@color/toolbar</item>
    </style>

    //Parents
    <style name="ButtonRegularStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red_border</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:background">@drawable/button_regular</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonRegularStyleDisabled">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:background">@drawable/background_button_inactive</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonRegularStyleCancel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:background">@drawable/background_button_cancel</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/red_light</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:textColorHint">@color/grey_dark</item>
    </style>

    <style name="SearchInputTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:textColorHint">@color/separator</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="LabelTextBoldStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">@font/assistant_bold</item>
    </style>

    <style name="LabelTextSemiBoldStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="LabelTextBigSemiBoldStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:fontFamily">@font/assistant_bold</item>
    </style>

    <style name="TimerTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="LabelTextStyleGreyLight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="LabelTextMediumStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="LabelTextMediumSemiBoldStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="LabelTextWhiteSemiBoldStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="LabelTextWhiteRegularStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="LabelTextGreyRegularStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>
    <style name="LabelTextGreyLightRegularStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>
    <style name="LabelLightSmallTextGreyStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/assistant_light</item>
    </style>



    <style name="ButtonFollowingSmall" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red_border</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/button_share</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonFollowSmall" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/grey_light</item>
        <item name="tabIndicatorColor">@color/red_dark</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppearance</item>
    </style>

    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
    </style>

    <style name="Widget">
    </style>
    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>


    <style name="TextMediumLightStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/assistant_light</item>
    </style>

    <style name="LabelBigSemiBoldStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/assistant_semi_bold</item>
        <item name="android:textColor">@color/red_dark</item>
    </style>

    <style name="TextBigLightDarkStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/assistant_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextMediumLightDarkStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/assistant_light</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="TitleMediumLightStyle" parent="TextMediumLightStyle">
        <item name="android:textColor">@color/grey</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_video_recording_actions"
                 android:id="@+id/lnrLayoutVideoRecordingActions"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lnrLayoutPortrait"
            android:orientation="vertical"
            android:background="@drawable/background_alpha_reverse"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/progressBarPortrait"
                style="@style/Widget.ProgressBar.Vertical"
                android:progressDrawable="@drawable/progressbar"
                android:indeterminate="false"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/viewLoading"
            android:background="@color/black"/>
    </FrameLayout>
</layout>
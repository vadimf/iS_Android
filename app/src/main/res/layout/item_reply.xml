<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/videoViewPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:resize_mode="fill"
                app:surface_type="texture_view"
                app:use_controller="true"
                app:show_timeout="0"
                app:controller_layout_id="@layout/custom_playback_control"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgViewPhoto"
                android:layout_alignParentStart="true"
                android:src="@drawable/small_image_profile_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewUsername"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgViewPhoto"
                style="@style/TitleMediumLightStyle"
                android:textColor="@color/white"
                tools:text="alex"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewDate"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/assistant_regular"
                android:layout_alignStart="@id/txtViewUsername"
                android:layout_below="@id/txtViewUsername"
                tools:text="3 days ago"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmLayoutMenu"
                android:layout_alignParentEnd="true"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:tint="@color/white"/>
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>
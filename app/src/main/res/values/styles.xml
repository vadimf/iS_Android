<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_positive_color">@color/hint</item>
        <item name="md_negative_color">@color/border_active</item>
        <item name="md_content_color">@color/dark</item>
        <item name="md_title_color">@color/dark</item>
        <item name="md_widget_color">@color/share</item>
    </style>

    //Parents
    <style name="ButtonRegularStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/border_active</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/button_regular</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>




    <style name="TextSmallLightStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TextRegularStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="TextRegularLightStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TextMediumLightStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TextMediumStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="LabelBigSemiBoldStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="HintBigLightStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/border_inactive</item>
    </style>
    <style name="TextBigLightStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/label_regular</item>
    </style>
    <style name="TextBigLightDarkStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="ErrorSmallLightStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/error</item>
    </style>
    <style name="SmallLightDarkStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="TextVerySmallLightStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/hint</item>
    </style>
    <style name="LabelSmallLightStyle" parent="TextSmallLightStyle">
        <item name="android:textColor">@color/hint</item>
    </style>
    <style name="HintRegularLightStyle" parent="TextRegularLightStyle">
        <item name="android:textColor">@color/hint</item>
    </style>
    <style name="LabelRegularLightStyle" parent="TextRegularLightStyle">
        <item name="android:textColor">@color/label_regular</item>
    </style>
    <style name="TitleRegularLightStyle" parent="TextRegularLightStyle">
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="TitleMediumLightStyle" parent="TextMediumLightStyle">
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="HintSmallLightStyle" parent="TextSmallLightStyle">
        <item name="android:textColor">@color/border_inactive</item>
    </style>
    <style name="TextSmallLightBlueStyle" parent="TextSmallLightStyle">
        <item name="android:textColor">@color/border_active</item>
    </style>
    <style name="HintSmallLightDarkStyle" parent="TextSmallLightStyle">
        <item name="android:textColor">@color/label_regular</item>
    </style>
    <style name="TextRegularBlueStyle" parent="TextRegularStyle">
        <item name="android:textColor">@color/border_active</item>
    </style>
    <style name="HintMediumLightStyle" parent="TextMediumLightStyle">
        <item name="android:textColor">@color/hint</item>
    </style>
    <style name="TabSelectedMediumStyle" parent="TextMediumStyle">
        <item name="android:textColor">@color/label_regular</item>
    </style>
    <style name="TabUnSelectedMediumStyle" parent="TextMediumStyle">
        <item name="android:textColor">@color/hint</item>
    </style>
    <style name="ButtonShareStyle" parent="ButtonRegularStyle">
        <item name="android:background">@drawable/button_share</item>
        <item name="android:textColor">@color/share</item>
    </style>
    <style name="ButtonFollowingSmall" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_share</item>
    </style>
    <style name="ButtonFollowSmall" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_regular</item>
    </style>

    <style name="ButtonFollowingSmallest" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/button_share</item>
    </style>
    <style name="ButtonFollowSmallest" parent="ButtonRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/button_regular</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/dark</item>
        <item name="tabIndicatorColor">@color/dark</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppearance</item>
    </style>

    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="InputTextStyle" parent="TextSmallLightStyle">
        <item name="android:textColor">@color/label_regular</item>
        <item name="android:textColorHint">@color/border_inactive</item>
        <item name="android:background">@drawable/ic_input_background</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="InputBigTextStyle" parent="TextMediumLightStyle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/border_inactive</item>
        <item name="android:background">@drawable/ic_input_background_big</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="colorControlActivated">@color/border_active</item>
        <item name="colorControlNormal">@color/border_inactive</item>
    </style>

    <style name="Widget">
    </style>
    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>


</resources>
